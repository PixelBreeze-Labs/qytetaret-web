{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,          // Changed to false to be less restrictive
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",          // Added for better path resolution
		"noImplicitAny": false,  // Added to allow implicit any types
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"middleware.ts",        // Fixed the middleware path
		".next/types/**/*.ts",
		"src/**/*"             // Added to include all source files
	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		".next",
		"coverage"
	]
}